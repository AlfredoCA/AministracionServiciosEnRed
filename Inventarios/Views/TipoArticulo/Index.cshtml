@model IEnumerable<Inventarios.Models.TipoArticulos>

@{
    ViewBag.Title = "Tipos de artículo";
}

<h2>Tipos de artículo</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdTipo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdTipo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdTipo })
        </td>
    </tr>
}

</table>
