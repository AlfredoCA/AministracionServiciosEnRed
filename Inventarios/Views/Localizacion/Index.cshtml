@model IEnumerable<Inventarios.Models.Localizaciones>

@{
    ViewBag.Title = "Index";
}

<h2>Localizaciones</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalles)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalles)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdLocalizacion }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdLocalizacion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdLocalizacion })
        </td>
    </tr>
}

</table>
