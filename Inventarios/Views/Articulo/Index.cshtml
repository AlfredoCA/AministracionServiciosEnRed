@model IEnumerable<Inventarios.Models.Articulos>

@{
    ViewBag.Title = "Articulos";
}

<h2>Articulos</h2>

<p>
       @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Identificador
        </th>
        <th>
            Modelo
        </th>
        <th>
            Persona asignada
        </th>
        <th>
            Ubicacion
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdArticulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelos.Fabricante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personals.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Localizaciones.Direccion)
        </td>
        <td>
            @if (item.CodigoStatus == 1)
            {
                @Html.Raw("Funciona");
            }
            else
            {
                if (item.CodigoStatus == 2)
                {
                    @Html.Raw("No funciona");
                }
                else
                {
                    if (item.CodigoStatus == 2)
                    {
                        @Html.Raw("En mantenimiento");
                    }   
                }
            }
 
        </td>
        <td>

            @if (@User.IsInRole("Administrador")) 
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.IdArticulo })
            }

            @Html.ActionLink(" Detalles ", "Details", new { id = item.IdArticulo })

            @if (@User.IsInRole("Administrador"))
            {
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdArticulo })
            }

        </td>
    </tr>
}

</table>
