@model Inventarios.Models.Ticket

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHelpDesk.cshtml";
}

<h2>Tickets</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar ticket</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Titulo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo)
                @Html.ValidationMessageFor(model => model.Titulo)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Categoria, new SelectList(
                  new List<Object>{
                       new { value = "Petición de serv.: mover/agregar/cambiar el sistema" , text = "Petición de serv.: mover/agregar/cambiar el sistema"  },
                       new { value = "Petición de serv.: resetear contraseña" , text = "Petición de serv.: resetear contraseña" },
                       new { value = "Petición de serv.: actualizar licencia" , text = "Petición de serv.: actualizar licencia"},
					   new { value = "Petición de serv.: revisión contra software malicioso" , text = "Petición de serv.: revisión contra software malicioso" },
					   new { value = "Petición de serv.: mantenimiento preventivo" , text = "Petición de serv.: mantenimiento preventivo" },
					   new { value = "Fallas: hardware" , text = "Fallas: hardware" },
					   new { value = "Fallas: software" , text = "Fallas: software" },
					   new { value = "Fallas: servicios" , text = "Fallas: servicios" },
					   new { value = "Incidentes técnicos: hardware" , text = "Incidentes técnicos: hardware" },
					   new { value = "Incidentes técnicos: software" , text = "Incidentes técnicos: software" },
					   new { value = "Incidentes técnicos: servicios" , text = "Incidentes técnicos: servicios" },
					   new { value = "Ayuda/Asistencia: solicitar información" , text = "Ayuda/Asistencia: solicitar información" },
					   new { value = "Ayuda/Asistencia: asistencia de capacitación" , text = "Ayuda/Asistencia: asistencia de capacitación" }
                    },
                  "value",
                  "text", 1))
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Prioridad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Prioridad, new SelectList(
                  new List<Object>{
                       new { value = "Muy alta", text = "Muy alta"  },
                       new { value = "Alta", text = "Alta" },
                       new { value = "Media", text = "Media"},
					   new { value = "Baja", text = "Baja" },
					   new { value = "Muy baja", text = "Muy baja" }
                    },
                  "value",
                  "text",
            1))
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(
                  new List<Object>{
                       new { value = "Nuevo", text = "Nuevo"  },
                       new { value = "Siendo analizado", text = "Siendo analizado" },
                       new { value = "En proceso de aprobación", text = "En proceso de aprobación"},
					   new { value = "Esperando a ser cerrado", text = "Esperando a ser cerrado" },
					   new { value = "Problema identificado", text = "Problema identificado" },
					   new { value = "Problema resuelto", text = "Problema resuelto" },
					   new { value = "Problema cerrado sin ser resuelto" , text = "Problema cerrado sin ser resuelto" }
                    },
                  "value",
                  "text",
            1))
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Fecha de creación", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.FechaCreacion)
                @Html.HiddenFor(model => model.FechaCreacion)
                @Html.ValidationMessageFor(model => model.FechaCreacion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Creador", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.IdCreador)
                @Html.HiddenFor(model => model.IdCreador)
                @Html.ValidationMessageFor(model => model.IdCreador)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Última actualización", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.FechaUltimaActualizacion)
                @Html.HiddenFor(model => model.FechaUltimaActualizacion)
                @Html.ValidationMessageFor(model => model.FechaUltimaActualizacion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Fecha de vencimiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.FechaVencimiento)
                @Html.HiddenFor(model => model.FechaVencimiento)
                @Html.ValidationMessageFor(model => model.FechaVencimiento)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Post de KB relacionado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KnowledgeItemId", String.Empty)
                @Html.ValidationMessageFor(model => model.KnowledgeItemId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("CI relacionado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ArticulosIdArticulo", String.Empty)
                @Html.ValidationMessageFor(model => model.ArticulosIdArticulo)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Asignado a", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PersonalsIdPersonal", String.Empty)
                @Html.ValidationMessageFor(model => model.PersonalsIdPersonal)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar cambios" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>
