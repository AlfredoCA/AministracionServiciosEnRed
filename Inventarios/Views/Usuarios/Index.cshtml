@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>


<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Tipo de usuario
        </th>
        <th></th>
    </tr>

    @foreach (var stud in ViewBag.Usuario)
    {
        <tr>
            <td>
                @stud[0]
            </td>
            <td>
                @stud[1]
            </td>
            <td>
               @Html.ActionLink("Eliminar", "DeleteLink", new { usuario = stud[0] }) |
               @Html.ActionLink("Editar", "EditLink", new { usuario = stud[0], tipoUsuario = stud[1]})
            </td>
        </tr>
    }

</table>