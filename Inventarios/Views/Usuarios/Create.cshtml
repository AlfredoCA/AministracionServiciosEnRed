
@{
    ViewBag.Title = "Crear usuario";
}

<h2>Crear usuario</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Agregar usuarios</h4>

        <span style="color:darkred">@ViewBag.Error</span>
        <br><br>
        <div class="form-group">
            <div class="col-md-10">
                <b class="control-label col-md-2">Nombre:</b> <input type="text" name="nombreUsuario">
            </div>
            <br><br>
            <div class="col-md-10">
                <b class="control-label col-md-2">Tipo de usuario:</b>
                <select name="tipoUsuario">
                    <option value="Administrador">Administrador</option>
                    <option value="Miembro">Miembro</option>
                </select>
            </div>
                <br><br>
            <div class="col-md-10">
                <b class="control-label col-md-2">Contraseña:</b> <input type="password" name="password" >
            </div>
                <br><br>
            <div class="col-md-10">
                <b class="control-label col-md-2">Repetir contraseña:</b> <input type="password" name="passwordR">
             </div>
                    <br><br>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Agregar" class="btn btn-default" />
                        </div>
                    </div>

                </div>
        </div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}