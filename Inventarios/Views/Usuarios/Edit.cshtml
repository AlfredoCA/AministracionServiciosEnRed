
@{
    ViewBag.Title = "Edit";
}

<h2>Editar usuario</h2>

@using (Html.BeginForm("EditarPost", "Usuarios", new { nombreUsuario = @ViewBag.Usuario, tipoUsuarioA = @ViewBag.TipoUsuario }, FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Editar usuarios</h4>

        <div class="form-group">
            <div class="col-md-10">
                <b class="control-label col-md-2">Nombre:</b> <input type="text" name="usuario" value="@ViewBag.Usuario" disabled>
            </div>
                <br><br>
            <div class="col-md-10">
                <b class="control-label col-md-2">Tipo de usuario:</b>
                <select name="tipoUsuarioN">

                    @if (@ViewBag.TipoUsuario == "Administrador")
                {
                        <option value="Administrador" selected>Administrador</option>
                }
                else
                {
                        <option value="Administrador">Administrador</option>
                }

                    @if (@ViewBag.TipoUsuario == "Miembro")
                {
                        <option value="Miembro" selected>Miembro</option>
                }
                else
                {
                        <option value="Miembro">Miembro</option>
                }

                </select>
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




